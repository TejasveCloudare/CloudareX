.container {
  display: flex;
  height: 100vh;
  background-color: #000;
  color: #fff;
  font-family: "Inter", sans-serif;
}


/* Left & Right Section: always side-by-side unless mobile */

.leftSection {
  flex: 1;
  padding: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000;
  margin-top: 7vh;
}

.rightSection {
  flex: 1;
  padding: 20px 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  background-color: #000;
  border-left: 1px solid #222;
}


/* Login Buttons */

.loginButtons {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-top: 30px;
  width: 30%;
}

.linkedinBtn {
  background: #fff;
  color: #000;
  padding: 10px;
  border-radius: 4px;
  border: none;
  cursor: pointer;
}


/* Terms of Service text */

.tos {
  margin-top: 20px;
  font-size: 14px;
  color: #aaa;
  text-align: center;
}


/* Quote Section */

.quoteSection {
  display: flex;
  flex-direction: column;
  height: auto;
  justify-content: space-between;
}

.quote {
  font-size: clamp(1rem, 2vw, 1.5rem);
  min-height: 60px;
  display: flex;
  align-items: center;
}

.authorRow {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  gap: 20px;
  flex-wrap: nowrap;
}

.authorDetails {
  font-size: 14px;
  color: #ddd;
  display: flex;
  flex-direction: column;
}

.authorImageWrapper {
  width: clamp(120px, 30vw, 250px);
  height: clamp(120px, 30vw, 250px);
  overflow: hidden;
  border-radius: 50%;
  flex-shrink: 0;
}

.authorImage {
  width: 100%;
  height: 100%;
  object-fit: cover;
}


/* Arrow Controls */

.arrowControls {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.arrowControls button {
  background-color: transparent;
  border: 1px solid #fff;
  border-radius: 50%;
  color: #fff;
  font-size: 16px;
  width: 32px;
  height: 32px;
  cursor: pointer;
  transition: 0.3s;
}

.arrowControls button:hover {
  background-color: #fff;
  color: #000;
}


/* Company Logos Section */

.companiesSection {
  font-size: 14px;
}

.companyLogos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
  gap: 20px;
  margin-top: 10px;
  align-items: center;
  justify-items: center;
}

.logo {
  max-width: 100%;
  max-height: 60px;
  object-fit: contain;
  border: 0.1px solid #5d5d5d;
  padding: 2px;
}


/* Google Login Styling */

.GoogleLogin {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  border-radius: 2px;
}


/* Breakpoints */

@media (max-width: 1024px) {
  .container {
    height: auto;
    flex-direction: column;
    /* Stack vertically */
  }

  .leftSection,
  .rightSection {
    flex: unset;
    width: 90%;
    border-left: none;
    border-top: 1px solid #222;
    padding: 30px 15px;
  }

  .authorRow {
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
  }

  .authorImageWrapper {
    margin: 0 auto;
  }
}

@media (max-width: 600px) {
  .quote {
    font-size: 1rem;
  }

  .loginButtons {
    max-width: 80%;
  }

  .companyLogos {
    gap: 10px;
  }
}